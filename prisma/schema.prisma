// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?

  @@map(name: "users")
}

model Client {
  id Int @id @default(autoincrement())

  @@map(name: "clients")
}

model Project {
  id Int @id @default(autoincrement())

  @@map(name: "projects")
}

model Employee {
  id Int @id @default(autoincrement())

  @@map(name: "employees")
}

model WeeklyUpdate {
  id Int @id @default(autoincrement())

  @@map(name: "weekly_updates")
}

model Summary {
  id Int @id @default(autoincrement())

  @@map(name: "summaries")
}
